@model AspNetCoreWebApp.Model.Persons

@{
    ViewData["Title"] = "EditPerson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<br />

<h1>EditPerson</h1>


<hr />
<br />

<div class="row">
    <form asp-action="EditPerson" class="form-horizontal">
        <div class="col-md-4">
            @Html.HiddenFor(m => m.PersonID)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <br />
            <br />

            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <br />
            <br />

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <br />
            <br />

            <div class="form-group">
                <label asp-for="Location" class="control-label">Location</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <br />
            <br />

            <div class="form-group">
                <label asp-for="Telephone" class="control-label">Telephone</label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>

            <br />
            <br />

            <div class="form-group">
                <label asp-for="Company" class="control-label">Company</label>
                <input asp-for="Company" class="form-control" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>

            <br />
            <br />

            <div class="form-group">
                <input type="submit" value="Edit Person" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>


<br />

@{
    if (@TempData["Msg"] != null)
    {
        <script>

            alert('@TempData["msg"]')
        </script>

    }
}

<div>
    <a href="PersonList">Back to Person List</a>
</div>

