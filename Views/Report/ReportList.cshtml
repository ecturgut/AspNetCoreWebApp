@model ReportVM

@{
    ViewData["Title"] = "ReportList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h1>Report List</h1>

<br />

<p>
    <a href="CreateReport" class="btn btn-primary">Create New Report</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Company
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Report Date
            </th>
            <th>
                Status
            </th>
            <th>
                Location
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Report item in Model.Report)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>

                <td>
                    <button type="button" id="sil" class="btn btn-primary badge-pill" asp-route-id="#" onclick="location.href='@Url.Action("#",new {/* id=item.PrimaryKey */})'">Edit</button>
                    <button type="button" id="sil" class="btn btn-warning" asp-route-id="#" onclick="location.href='@Url.Action("#",new {/* id=item.PrimaryKey */})'">Details</button>
                    <button type="button" id="sil" class="btn btn-sm btn-danger" asp-route-id="#" onclick="location.href='@Url.Action("#",new {/* id=item.PrimaryKey */})'"> Delete</button>

                </td>
            </tr>
        }

    </tbody>
</table>