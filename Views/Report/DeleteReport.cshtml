@model AspNetCoreWebApp.VMClasses.ReportVM

@{
    ViewData["Title"] = "DeleteReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Report</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Report</h4>
    <hr />


    <form asp-action="DeleteReport" method="post">


        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reportt.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reportt.Status)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reportt.ReportDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reportt.ReportDate)
            </dd>

        </dl>

        <button type="submit" class="btn btn-sm btn-danger" asp-route-rvm="@Model.Reportt.ID.ToString()">
            Delete
        </button>

        <a asp-action="ReportList">Back to Report List</a>

    </form>

 

</div>


